!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", :'xml:lang' => "en"}
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %title Menolog
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "application"

    = javascript_include_tag 'google_analytics'
  %body
    %h1 Menolog
    =render :partial => 'welcome/menu'
    =render :partial => 'welcome/index'
    .notice=flash[:notice]
    .alert=flash[:alert]
    =yield
    #footer
      %hr
      %p
        Copyright &copy; 2008,
        = link_to "Menolog", root_url
      %p
        Please send any questions and suggestions to
        %a{:href => 'mailto:admin@sinceritas.org'} admin@sinceritas.org

